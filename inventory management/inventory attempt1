inventory_resurves = []


addItemName = input(print("item name"))   

print(addItemName)



def add_item_to_inventory():

    addItemName = input("item name")            #item name
    addItemCost = int(input("item cost"))       #item  cost
    addItemPrice = int(input("item price"))     #item selling price
    addItemAmount = int(input("item amount"))   #amount of item added to inventory


    # I also changed the input methods

#create new dictionary with the above information as a new item in inventory
    item = (addItemName, addItemCost, addItemPrice, addItemAmount)
    inventory_resurves.append(item)

    #Created an item variable and assigned the dicyionary value to it.
    #I used a tuple instead... he he he

    print(inventory_resurves)


# hope this works
add_item_to_inventory()
